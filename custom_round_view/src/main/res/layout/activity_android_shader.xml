            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="演示文字"
            app:mTestColor="@color/black"
            app:mTestSize="78dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="3dp"
